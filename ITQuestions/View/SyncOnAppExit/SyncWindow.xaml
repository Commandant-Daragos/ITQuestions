<Window x:Class="ITQuestions.View.SyncOnAppExit.SyncWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITQuestions.View.SyncOnAppExit"
        mc:Ignorable="d"
        Icon="/Resources/ITQuestions.ico"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="SyncWindow" Height="150" Width="300">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="Blue"/>
        </Grid.Background>
        
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <ProgressBar IsIndeterminate="True" Width="200" Height="20"/>
            <TextBlock Text="Syncing with remote database, please wait..."
                       Margin="0,10,0,0"
                       HorizontalAlignment="Center"
                       Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
