<Window x:Class="ITQuestions.View.UpdateQuestion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITQuestions.View"
        xmlns:vm="clr-namespace:ITQuestions.ViewModel"
        xmlns:entity="clr-namesace:ITQuestions.Model"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="New question" Height="450" Width="800">
    <Grid>

        <Grid.Background>
            <SolidColorBrush Color="Blue"/>
        </Grid.Background>

        <TextBlock Name="Question"
               Text="Question"
               FontSize="40"
               FontWeight="Bold"
               Foreground="White" 
               Margin="0,10,600,354">
        </TextBlock>

        <TextBox Name="QuestionText"
                 TextWrapping="Wrap"
                 Text="{Binding UpdateQuestion}"
                 Margin="10,85,10,238">
        </TextBox>

        <TextBlock Name="Answer"
               Text="Answer"
               FontSize="40"
               FontWeight="Bold"
               Foreground="White" 
               Margin="10,201,615,158">
        </TextBlock>

        <TextBox Name="AnswerText"
                 TextWrapping="Wrap" 
                 AcceptsReturn="true"
                 VerticalScrollBarVisibility="Auto"
                 Text="{Binding UpdateAnswer}"
                 Margin="10,276,10,45">
        </TextBox>

        <Button Name="UpdateQuestionButton"
                Content="Submit"
                FontSize="15"
                FontWeight="Bold"
                Padding="10,5"
                Command="{Binding UpdateQuestionCommand}"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="5"/>

    </Grid>
</Window>
