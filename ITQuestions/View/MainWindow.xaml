<Window x:Class="ITQuestions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ITQuestions.ViewModel"
        xmlns:entity="clr-namesace:ITQuestions.Model"
        xmlns:local="clr-namespace:ITQuestions"
        xmlns:converter="clr-namespace:ITQuestions.Converter"
        mc:Ignorable="d"
        Icon="/Resources/ITQuestions.ico"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Questions" Height="900" Width="1300">

    <Window.Resources>
        <converter:ShortenTextConverter x:Key="ShortenTextConverter" />
    </Window.Resources>

    <Window.DataContext>
        <vm:MainWindowVM/>
    </Window.DataContext>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/ITQuestions.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Label Name="VersionLabel"
               Foreground="Wheat"
               Content="Placeholder version."/>
                
        
        <Label Name="Question"
               Content="Question"
               FontSize="40"
               FontWeight="Bold"
               Foreground="White" 
               Margin="0,264,980,530"/>

        <TextBlock Name="QuestionText"
                   TextWrapping="Wrap"
                   Foreground="White"  
                   FontWeight="Bold"
                   Margin="40,324,395,330"
                   Text="{Binding SelectedQuestion.Question}"/>

        <Label Name="Answer"
               Content="Answer"
               FontSize="40"
               FontWeight="Bold"
               Foreground="White" 
               Margin="0,554,1030,225"/>

        <TextBox Name="AnswerText"
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 Foreground="White"
                 IsReadOnly="True"
                 Background="Transparent"
                 BorderThickness="0"
                 CaretBrush="Transparent"
                 Focusable="False"
                 Margin="40,611,395,23"
                 Text="{Binding SelectedQuestion.Answer}"/>

        <ListView x:Name="QuestionsList" 
          Margin="950,10,10,80"
          ItemsSource="{Binding Questions}"
          SelectedItem="{Binding SelectedQuestion}">

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <!-- Text -->
                            <ColumnDefinition Width="Auto" />
                            <!-- Edit -->
                            <ColumnDefinition Width="Auto" />
                            <!-- Delete -->
                        </Grid.ColumnDefinitions>

                        <!-- Question text -->
                        <TextBlock Grid.Column="0"
                           VerticalAlignment="Center"
                           Text="{Binding Question, Converter={StaticResource ShortenTextConverter}}"
                           ToolTip="{Binding Question}" />

                        <!-- Edit button -->
                        <Button Grid.Column="1" Content="✎"
                        Command="{Binding DataContext.UpdateQuestionAsyncCommand,
                                          RelativeSource={RelativeSource AncestorType=ListView}}"
                        CommandParameter="{Binding}"
                        Margin="5,0" />

                        <!-- Delete button -->
                        <Button Grid.Column="2" Content="🗑"
                        Command="{Binding DataContext.DeleteQuestionCommand,
                                          RelativeSource={RelativeSource AncestorType=ListView}}"
                        CommandParameter="{Binding}"
                        Margin="5,0" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Name="AddQuestion"
                Content="New Question"
                FontSize="30"
                FontWeight="Bold"
                Padding="10,5"
                Command="{Binding AddNewQuestionAsyncCommand}"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,69,10"/>
    </Grid>
</Window>